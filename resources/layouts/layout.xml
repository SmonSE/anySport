<layout id="MainLayout">
    <label
        id="label_time"
        text="TIME"
        x="center"
        y="5%"
        font="Gfx.FONT_SYSTEM_XTINY"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
    />
    <label
        id="current_time"
        text="00:00"
        x="center"
        y="10%"
        font="Gfx.FONT_MEDIUM"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
    />
    <label
        id="label_hr"
        text="HR"
        x="30%"
        y="30%"
        font="Gfx.FONT_SYSTEM_XTINY"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
    />
    <label
        id="current_hr"
        text="---"
        x="30%"
        y="35%"
        font="Gfx.FONT_MEDIUM"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
    />
    <label
        id="label_max_hr"
        text="MAX HR"
        x="70%"
        y="30%"
        font="Gfx.FONT_SYSTEM_XTINY"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
    />
    <label
        id="max_hr"
        text="---"
        x="70%"
        y="35%"
        font="Gfx.FONT_MEDIUM"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
    />
    <label
        id="label_calories"
        text="CALORIES"
        x="30%"
        y="55%"
        font="Gfx.FONT_SYSTEM_XTINY"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
    />
    <label
        id="calories"
        text="---"
        x="30%"
        y="60%"
        font="Gfx.FONT_MEDIUM"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
