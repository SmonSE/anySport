    <label
        id="label_effect"
        text="EFFECT"
        x="70%"
        y="55%"
        font="Gfx.FONT_SYSTEM_XTINY"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
    />
    <label
        id="effect"
        text="---"
        x="70%"
        y="60%"
        font="Gfx.FONT_MEDIUM"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
    />
    <label
        id="label_timer"
        text="TIMER"
        x="center"
        y="75%"
        font="Gfx.FONT_SYSTEM_XTINY"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
    />
    <label
        id="left_timer"
        text="00:00:00"
        x="center"
        y="80%"
        font="Gfx.FONT_MEDIUM"
        justification="Gfx.TEXT_JUSTIFY_CENTER"
    />
    <label 
        x="center" 
        y="90%" 
        text="@Strings.prompt" 
        color="Graphics.COLOR_WHITE" 
        justification="Graphics.TEXT_JUSTIFY_CENTER" 
    />
</layout>
